<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bglistsms"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_margin="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/imgrecychome"
                android:src="@drawable/calender"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <TextView
                android:text="HARI"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:id="@+id/hari"
                app:layout_constraintStart_toStartOf="@id/imgrecychome"
                app:layout_constraintEnd_toEndOf="@id/imgrecychome"
                app:layout_constraintTop_toTopOf="@id/imgrecychome"
                app:layout_constraintBottom_toBottomOf="@id/imgrecychome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_margin="8dp"
            android:layout_gravity="center"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="13:00"
                android:id="@+id/Jam"
                android:layout_width="wrap_content"
                android:layout_height="0dp"></TextView>
            <TextView
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="02 Januari 2020"
                android:id="@+id/tanggal"
                android:layout_width="wrap_content"
                android:layout_height="0dp"></TextView>
        </LinearLayout>
    </LinearLayout>

    <Button
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_export"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_width="25dp"
        android:layout_height="25dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>