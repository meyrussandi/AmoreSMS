<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VerifikasiOtpActivity">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv1"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:textAlignment="center"
            android:text="Masukan kode yang\nkami kirimkan ke"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvPhoneNumber"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"
            android:textAlignment="center"
            android:text="089612345678"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:orientation="horizontal"
            android:weightSum="6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textAlignment="center"
                android:text="1"
                android:id="@+id/otp1"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_edit"
                android:layout_width="0dp"
                />
            <EditText
                android:textAlignment="center"
                android:text="1"
                android:layout_marginLeft="4dp"
                android:id="@+id/otp2"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_edit"
                android:layout_width="0dp"
                />
            <EditText
                android:textAlignment="center"
                android:text="1"
                android:layout_marginLeft="4dp"
                android:id="@+id/otp3"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_edit"
                android:layout_width="0dp"
                />
            <EditText
                android:textAlignment="center"
                android:text="1"
                android:layout_marginLeft="4dp"
                android:id="@+id/otp4"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_edit"
                android:layout_width="0dp"
                />
            <EditText
                android:textAlignment="center"
                android:text="1"
                android:layout_marginLeft="4dp"
                android:id="@+id/otp5"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_edit"
                android:layout_width="0dp"
                />
            <EditText
                android:textAlignment="center"
                android:text="1"
                android:layout_marginLeft="4dp"
                android:id="@+id/otp6"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_edit"
                android:layout_width="0dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:text="Panggil Saya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="(TERSEDIA DI "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/cdCallme"
                        android:textColor="@color/black"
                        android:text="01:03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text=")"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
                <TextView
                    android:id="@+id/nomorSalah"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:text="NOMOR SALAH"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <Button
            android:text="SELANJUTNYA"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="32dp"
            android:id="@+id/btn_next"
            style="@style/btn_bluePrimary"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>